
@{
    ViewBag.Title = "Consultar";
}

<h2>Consultar Contato</h2>


<section class="content">
    <div class="row">
        <div class="box box-info">
            <div class="box-header with-border">
                <a href="/Contato/Index" class="btn btn-success btn-secondary"><span class="fa fa-arrow-left"></span> Voltar</a>
            </div>
            <div class="box-body">

                <div class="col-md-6">
                    <div class="form-group">
                        <label>Nome</label>
                        <input type="text" class="form-control" id="txtNome" placeholder="Nome" maxlength="50">
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label>E-mail</label>
                        <input type="text" class="form-control" id="txtEmail" placeholder="Email" maxlength="50">
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label>Telefone</label>
                        <input type="text" class="form-control" id="txtTelefone" placeholder="Telefone" maxlength="14">
                    </div>
                </div>


                <div class="col-md-12">
                    <hr />
                </div>
                <div class="col-md-12">
                    <button type="button" class="btn btn-primary pull-right" id="btnCancelar" onclick="CancelarContato();">Cancelar</button>
                    <button type="button" class="btn btn-primary pull-right" id="btnLimpar" onclick="LimparContato();">Limpar</button>
                    <button type="button" class="btn btn-primary pull-right" id="btnPesquisar" onclick="Pesquisar();">Pesquisar</button>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="~/Scripts/Contato/Consultar.js"></script>

<section class="content">
    <div class="row" id="Grid">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Tabela de Contatos</h3>
                </div>
                <div class="box-body">
                    <table id="myDataTable" class="table table-bordered table-striped table-hover" style="width:100%;">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Nome</th>
                                <th>Email</th>
                                <th>Telefone</th>
                                <th>Opções</th>
                            </tr>
                        </thead>

                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>


<script src="~/Scripts/Contato/Consultar.js"></script>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>